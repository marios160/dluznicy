<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.include.dluznicy.ListaDlugow" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/edytujDluznika"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edytujdluznika"
            android:onClick="edytujDane" />

        <Button
            android:id="@+id/dodajDlug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dodajdlug"
            android:onClick="dodajDlug" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonDialogUsunDlug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="usun"
            android:text="UsuÅ„ profil" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kwota"
            android:textSize="22sp"
            android:width="100dp" />

        <TextView
            android:id="@+id/listaDlugowDataZwrotu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Zwrotu"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="22sp" />

    </LinearLayout>
	
    <ListView
        android:id="@+id/listaDlugow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>